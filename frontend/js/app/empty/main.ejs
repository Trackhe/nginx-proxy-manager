<% if (title) { %>
    <h1 class="h2 mb-3"><%- title %></h1>
<% }

if (subtitle) { %>
    <p class="h4 text-muted font-weight-normal mb-7"><%- subtitle %></p>
<% }

if (link) { %>
    <% if (btn_color_hex !== undefined) { %>
        <a class="btn btn-primary" style="background-color:<%- btn_color_hex %>" href="#"><%- link %></a>
    <% } else { %>
        <a class="btn btn-<%- btn_color %>" href="#"><%- link %></a>
    <% } %>
<% } %>


